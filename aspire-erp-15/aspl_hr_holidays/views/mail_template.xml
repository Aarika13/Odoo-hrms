<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_form_inherit" model="ir.ui.view">
            <field name="name">email.template.form.inherit</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form"/>
            <field name="arch" type="xml">
                <field name="email_cc" position="after">
                    <field name="email_bcc" placeholder="Comma-separated Bcc recipients addresses. For eg.test.test@gmail.com,abc.abc@gmail.com"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
    